
@{
    ViewBag.Title = "IndexFiguras";
}

<h2>IndexFiguras</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Area Figuras</h4>
        <hr />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Cuadrado" class="btn btn-default" onClick="location.href='/Cuadrado/Index'"  />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Rectangulo" class="btn btn-default" onClick="location.href='/Rectangulo/Index'"/>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Circulo" class="btn btn-default" onClick="location.href='/Circulo/Index'"/>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Triangulo" class="btn btn-default" onClick="location.href='/Triangulo/Index'"/>
            </div>
        </div>
    </div>
}


<div>
    @Html.ActionLink("Regresar", "Index", "Home")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

